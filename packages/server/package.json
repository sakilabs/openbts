{
	"name": "@openbts/server",
	"version": "1.0.0",
	"private": true,
	"description": "Core server for OpenBTS",
	"license": "GPL-3.0",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"dev": "tsx --watch src/index.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate --config=../drizzle/drizzle.config.ts",
		"start": "node dist/index.js",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@fastify/cors": "10.0.1",
		"@fastify/multipart": "9.0.1",
		"@node-rs/argon2": "^2.0.2",
		"@openbts/drizzle": "workspace:*",
		"@openbts/translations": "workspace:*",
		"@openbts/id": "workspace:*",
		"debug": "4.3.7",
		"dotenv": "16.4.5",
		"drizzle-orm": "0.36.3",
		"fast-jwt": "5.0.5",
		"fastify": "5.1.0",
		"ioredis": "5.5.0",
		"nanoid": "5.0.8",
		"postgres": "3.4.5"
	},
	"devDependencies": {
		"@openbts/typescript-configs": "workspace:*",
		"@types/debug": "4.1.12",
		"@types/json-schema": "7.0.15",
		"@types/node": "22.9.0",
		"drizzle-kit": "0.28.1",
		"tsx": "4.19.2",
		"typescript": "5.6.3"
	},
	"engines": {
		"node": ">=18",
		"npm": "please-use-pnpm",
		"pnpm": ">=8",
		"yarn": "please-use-pnpm"
	}
}
