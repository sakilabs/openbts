		"@fastify/cors": "11.1.0",
		"@fastify/multipart": "9.3.0",
		"@node-rs/argon2": "2.0.2",
		"@openbts/drizzle": "workspace:*",
		"better-auth": "1.3.34",
		"debug": "4.4.3",
		"dotenv": "17.2.3",
		"drizzle-orm": "0.44.7",
		"drizzle-zod": "0.8.3",
		"fast-jwt": "6.0.2",
		"fastify": "5.6.1",
		"fastify-type-provider-zod": "6.1.0",
		"figlet": "1.9.3",
		"nanoid": "5.1.6",
		"postgres": "3.4.7",
